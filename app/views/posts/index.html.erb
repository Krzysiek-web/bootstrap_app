<% :notice%>
<h3>Lista wpisów</h3>
<%= link_to "Dodaj nowy wpis", new_post_path, class: "btn btn-success" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Tytuł</th>
      <th>Autor</th>
      <th>Opublikowany?</th>
      <th>Treść</th>
      <th>Akcje</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
      <tr>
        <td><%= post.id%></td>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= post.published ? "Tak" : "Nie" %></td>
        <td><%= post.body %></td>
        <td>
          <%= link_to "Pokaż", post_path(post), class: "btn btn-light btn-sm"%>
          <%= link_to "Edytuj", edit_post_path(post), class: "btn btn-primary btn-sm"%>
          <%= button_to "Usuń", post_path(post), method: :delete, data: {turbo_confirm: "Jesteś pewien?"},class: "btn btn-danger btn-sm", form: {style: 'display: inline-block;'}%>
          <div class="modal" tabindex="-1">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Modal title</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <p>Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
