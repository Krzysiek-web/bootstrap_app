<h3>Lista wpisów</h3>

<%= link_to "Dodaj nowy wpis", new_post_path, class: "btn btn-success" %>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>Opublikowany?</th>
            <th>Treść</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post|%>
            <tr>
                <td><%= post.id%></td>
                <td><%= post.title %></td>
                <td><%= post.author %></td>
                <td><%= post.published ? "Tak" : "Nie" %></td>
                <td><%= post.body %></td>
                <td>
                    <%= link_to "Pokaż", post_path(post), class: "btn btn-light btn-sm"%>
                    <%= link_to "Edytuj", edit_post_path(post), class: "btn btn-primary btn-sm"%>
                    <%= link_to "Usuń", post_path(post), data: {turbo_method: :delete, turbo_confirm: "Jesteś pewien?"}, class: "btn btn-danger btn-sm"%>
                    
                </td>
            </tr>
        <%end%>
    </tbody>
</table>